{
    "name": "create-windowless-app",
    "version": "3.0.0",
    "description": "Create a windowless NodeJS app",
    "main": "dist/index.js",
    "bin": {
        "create-windowless-app": "./dist/index.js"
    },
    "scripts": {
        "build": "npm run eslint && npm run test && npm run tsc && npm run package",
        "eslint": "eslint src/**/*.ts test/**/*.ts",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json templates/**/*.json",
        "test": "jest --coverage",
        "tsc": "rimraf dist && tsc",
        "start": "ts-node src/index.ts",
        "start:help": "npm run start -- --help",
        "start:info": "npm run start -- --info",
        "package": "npm pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yoavain/create-windowless-app.git"
    },
    "keywords": [
        "windowless",
        "no console",
        "nodew",
        "template",
        "typescript"
    ],
    "author": "yoavain",
    "license": "MIT",
    "engines": {
        "node": ">=10"
    },
    "files": [
        "dist/**",
        "resources/**",
        "templates/**"
    ],
    "bugs": {
        "url": "https://github.com/yoavain/create-windowless-app/issues"
    },
    "homepage": "https://github.com/yoavain/create-windowless-app#readme",
    "devDependencies": {
        "@types/cross-spawn": "6.0.1",
        "@types/fs-extra": "8.1.0",
        "@types/inquirer": "6.5.0",
        "@types/jest": "25.2.1",
        "@types/mock-fs": "4.10.0",
        "@types/node": "13.11.0",
        "@types/node-fetch": "2.5.5",
        "@types/request": "2.48.4",
        "@types/semver": "7.1.0",
        "@types/semver-compare": "1.0.1",
        "@types/uuid": "7.0.2",
        "@types/validate-npm-package-name": "3.0.0",
        "@typescript-eslint/eslint-plugin": "2.27.0",
        "@typescript-eslint/parser": "2.27.0",
        "del": "5.1.0",
        "eslint": "6.8.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-node": "11.1.0",
        "global-npm": "0.4.1",
        "husky": "4.2.3",
        "jest": "25.2.7",
        "lint-staged": "10.1.2",
        "mock-fs": "4.11.0",
        "mocked-env": "1.3.2",
        "prettier": "2.0.4",
        "rimraf": "3.0.2",
        "ts-jest": "25.3.1",
        "ts-node": "8.8.2",
        "typescript": "3.8.3",
        "uuid": "7.0.3"
    },
    "dependencies": {
        "chalk": "4.0.0",
        "commander": "4.1.1",
        "cross-spawn": "7.0.2",
        "envinfo": "7.5.0",
        "fs-extra": "9.0.0",
        "inquirer": "7.1.0",
        "node-fetch": "2.6.0",
        "semver": "7.2.1",
        "semver-compare": "1.0.0",
        "validate-npm-package-name": "3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
