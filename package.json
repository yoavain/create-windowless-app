{
    "name": "create-windowless-app",
    "version": "6.0.0",
    "description": "Create a windowless NodeJS app",
    "main": "dist/index.js",
    "bin": {
        "create-windowless-app": "./dist/index.js"
    },
    "scripts": {
        "prebuild": "npm run test",
        "build": "npm run tsc && npm run add-shebang && npm run package",
        "test": "npm run eslint && npm run type-check && npm run jest",
        "eslint": "eslint src/ test/ templates/",
        "eslint:fix": "npm run eslint -- --fix",
        "type-check": "tsc --build tsconfig.all.json",
        "jest": "cross-env FORCE_COLOR=0 jest",
        "prettier": "prettier --write *.json templates/**/*.json",
        "pretsc": "rimraf dist",
        "tsc": "tsc",
        "add-shebang": "add-shebang",
        "start": "ts-node src/index.ts",
        "start:help": "npm run start -- --help",
        "package": "npm pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yoavain/create-windowless-app.git"
    },
    "keywords": [
        "windowless",
        "no console",
        "nodew",
        "template",
        "typescript"
    ],
    "author": "yoavain",
    "license": "MIT",
    "engines": {
        "node": ">=12 <15",
        "npm": "<7"
    },
    "files": [
        "dist/**",
        "resources/**",
        "templates/**"
    ],
    "bugs": {
        "url": "https://github.com/yoavain/create-windowless-app/issues"
    },
    "homepage": "https://github.com/yoavain/create-windowless-app#readme",
    "devDependencies": {
        "@types/cross-spawn": "6.0.2",
        "@types/fs-extra": "9.0.8",
        "@types/inquirer": "7.3.1",
        "@types/jest": "26.0.20",
        "@types/mock-fs": "4.13.0",
        "@types/node": "14.14.31",
        "@types/node-fetch": "2.5.8",
        "@types/node-notifier": "8.0.0",
        "@types/request": "2.48.5",
        "@types/semver": "7.3.4",
        "@types/semver-compare": "1.0.1",
        "@types/uuid": "8.3.0",
        "@types/validate-npm-package-name": "3.0.2",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "4.16.1",
        "@typescript-eslint/parser": "4.16.1",
        "add-shebang": "0.1.0",
        "copy-webpack-plugin": "7.0.0",
        "cross-env": "7.0.3",
        "del": "6.0.0",
        "eslint": "7.21.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.1.5",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "global-npm": "0.4.1",
        "husky": "4.3.8",
        "jest": "26.6.3",
        "lint-staged": "10.5.4",
        "mock-fs": "4.13.0",
        "mocked-env": "1.3.2",
        "node-notifier": "9.0.0",
        "prettier": "2.2.1",
        "rimraf": "3.0.2",
        "ts-jest": "26.5.2",
        "ts-node": "9.1.1",
        "typescript": "4.2.2",
        "uuid": "8.3.2",
        "webpack": "5.24.2",
        "winston": "3.3.3"
    },
    "dependencies": {
        "chalk": "4.1.0",
        "cross-spawn": "7.0.3",
        "fs-extra": "9.1.0",
        "inquirer": "8.0.0",
        "node-fetch": "2.6.1",
        "semver": "7.3.4",
        "semver-compare": "1.0.0",
        "validate-npm-package-name": "3.0.0",
        "yargs": "16.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
